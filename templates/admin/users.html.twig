{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
<div class="card flex-fill">
    <div class="card-header">
        <h5 class="card-title mb-0">User index</h5>
    </div>
    <table class="table table-hover my-0 tab-users">
        <thead>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.comments|length }}</td>
            </tr>
            {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    {# <a href="{{ path('user_new') }}">Create new</a> #}
{% endblock %}