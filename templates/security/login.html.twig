{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
				<div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
					<div class="d-table-cell align-middle">

						<div class="text-center mt-4">
							<h1 class="h2">Welcome to our Blog</h1>
							<p class="lead">
								Sign in to your account to continue
							</p>
						</div>

						<div class="card">
							<div class="card-body">
								<div class="m-sm-4">
                                    <div class="text-center">
										<img src=" {{ asset('img/avatars/defaultAvatar.png') }}" class="img-fluid rounded-circle" width="132" height="132">
									</div>
                                    <form method="post">
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}

                                        {% if app.user %}
                                            <div class="mb-3">
                                                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                                            </div>
                                        {% endif %}
                                        <div class="mb-3">
                                            <label class="form-label">Email</label>
                                            <input class="form-control form-control-lg" type="email" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Enter your email" required autofocus>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label" id="inputPassword" required>Password</label>
                                            <input class="form-control form-control-lg" type="password" name="password" placeholder="Enter your password">
                                        </div>
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                        {#
                                            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                            See https://symfony.com/doc/current/security/remember_me.html

                                            <div class="checkbox mb-3">
                                                <label>
                                                    <input type="checkbox" name="_remember_me"> Remember me
                                                </label>
                                            </div>
                                        #}
                                        <div class="text-center mt-3">
                                            <button class="btn btn-square btn-square-bg-color btn-primary" type="submit">
                                                Sign in
                                            </button>
                                        </div>
                                    </form>
                                </div>
							</div>
						</div>
					</div>
				</div>
{% endblock %}