{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
        <div class="d-table-cell align-middle">

            <div class="text-center mt-4">
                <h1 class="h2">Welcome to our Blog</h1>
                <p class="lead">
                    Create your account to continue
                </p>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="m-sm-4">
                        {{ form_start(registrationForm) }}
                        <div class="mb-3">
                            {{ form_row(registrationForm.email, {
                                'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your email'} 
                            }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(registrationForm.username, {
                                'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your username'} 
                            }) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Password', {
                                    'label_attr': {'class': 'form-label'} 
                                }) }}
                            {{ form_row(registrationForm.plainPassword, {
                                'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your password'} 
                            }) }}
                        </div>
                        {# <div class="mb-3">
                            {{ form_row(registrationForm.agreeTerms, {
                                'label': {"Agree to RGPD terms and conditions"}, 'label_attr': {'class': 'form-label'}, 'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Enter your password'} 
                            }) }}
                            form_label(form.title, 'Title', {
                        'label_attr': {'class': 'form-label'}
                    }) 
                        </div> #}
                        <div class="mb-3">
                            {{ form_row(registrationForm.agreeToRgpdTemrsAndConditions) }}
                        </div>
                        <div class="text-center mt-3">
                            <button class="btn btn-square btn-square-bg-color btn-primary" type="submit">
                                Register
                            </button>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
